{
  // 组件自动导入
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/score/score",
      "style": {
        "navigationBarTitleText": "成绩查询",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "管理"
      }
    },
    {
      "path": "pages/find/find",
      "style": {
        "navigationBarTitleText": "发现",
        "enablePullDownRefresh": false,
        "backgroundColor": "#ffffff",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/category/category",
      "style": {
        "navigationBarTitleText": "分类"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/exam/exam",
      "style": {
        "navigationBarTitleText": "考试日程",
        "enablePullDownRefresh": true
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  // 设置 TabBar
  "tabBar": {
    "color": "#333",
    "selectedColor": "#2979ff",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "成绩",
        "pagePath": "pages/score/score",
        "iconPath": "static/tabs/score_default.png",
        "selectedIconPath": "static/tabs/score_selected.png"
      },
      {
        "text": "分类",
        "pagePath": "pages/category/category",
        "iconPath": "static/tabs/category_default.png",
        "selectedIconPath": "static/tabs/category_selected.png"
      },
      {
        "text": "发现",
        "pagePath": "pages/find/find",
        "iconPath": "static/tabs/find_default.png",
        "selectedIconPath": "static/tabs/find_selected.png"
      },
      {
        "text": "管理",
        "pagePath": "pages/my/my",
        "iconPath": "static/tabs/manage_default.png",
        "selectedIconPath": "static/tabs/manage_selected.png"
      }
    ]
  }
}